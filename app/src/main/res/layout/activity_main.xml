<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- TextureView for camera preview (hidden when processing) -->
    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- ImageView for displaying processed frames -->
    <ImageView
        android:id="@+id/processedImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:contentDescription="@string/app_name" />

    <!-- GLSurfaceView for OpenGL rendering (backup option) -->
    <android.opengl.GLSurfaceView
        android:id="@+id/glSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Overlay controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#80000000">

        <!-- Toggle button for processing mode -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Processing Mode:"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/processingModeSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp" />
        </LinearLayout>

        <!-- FPS counter -->
        <TextView
            android:id="@+id/fpsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="FPS: --"
            android:textColor="#00FF00"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Processing time -->
        <TextView
            android:id="@+id/processingTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Processing: -- ms"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <!-- Resolution info -->
        <TextView
            android:id="@+id/resolutionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Resolution: --"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

</FrameLayout>

